{
  "name": "what-to-watch",
  "version": "1.0.0",
  "description": "Проект «{{projectTitle}}» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock_server": "json-server ./mocks/mock-server-data.json --port 3123",
    "start_dev": "npm run ts ./src/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "debug": "ts-node ./src/cli.ts"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/convict": "6.1.1",
    "@types/convict-format-with-validator": "6.0.2",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chalk": "5.0.1",
    "eslint": "^8.12.0",
    "eslint-config-htmlacademy": "^5.1.2",
    "json-server": "^0.17.0",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "type": "module",
  "engines": {
    "node": "^16.13.0",
    "npm": "^8.1.0"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.12.1",
